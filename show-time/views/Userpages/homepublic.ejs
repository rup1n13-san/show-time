                  <span class="text-white text-sm font-normal">from</span>
                  <span class="text-white text-lg sm:text-xl font-bold"><%= event.price.toLocaleString() %> CFA</span>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        <% } else { %>
          <div class="col-span-full text-white text-center py-12 sm:py-20">
            <div class="flex flex-col items-center gap-4">
              <svg class="w-16 h-16 sm:w-24 sm:h-24 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
