  <script>
    // Clear filters function
    function clearAllFilters() {
      window.location.href = '/';
    }

    // Update current year
    document.getElementById('currentYear').textContent = new Date().getFullYear();

    // Sync sort order between mobile and desktop selects
    const mobileSelect = document.getElementById('sortOrderFilter');
    const desktopSelect = document.getElementById('sortOrderFilterDesktop');
    
    if (mobileSelect && desktopSelect) {
      mobileSelect.addEventListener('change', function() {
        desktopSelect.value = this.value;
      });
      
      desktopSelect.addEventListener('change', function() {
        mobileSelect.value = this.value;
      });
    }
  </script>
